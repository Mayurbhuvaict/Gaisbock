                                 data-bs-parent="#accordionExampleTwo">
                                <div class="gaisbock-description-contain-title-description" itemprop="description">
                                    {{ page.product.translated.customFields.gaisbock_product_detail_extra_details_benefits|raw }}
                                </div>
