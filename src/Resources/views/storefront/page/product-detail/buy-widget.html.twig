                                    {{ "productDetailPage.contents"|trans|sw_sanitize }}
                                    {% sw_icon 'gaisbock-chevron-down' style {'pack': 'gaisbock','class':'gaisbock-extra-detail'} %}
                                </span>
                            </h3>
                        </div>

                        {% block page_product_detail_description_content_text %}
