{% sw_extends '@Storefront/storefront/page/product-detail/buy-widget.html.twig' %}

{% block page_product_detail_price %}
    {% block page_product_detail_neti_free_delivery_info_above_price %}
        {% if page.netiNextFreeDelivery and config('NetiNextFreeDelivery.config.articlePosition') is same as(constant('NetInventors\\NetiNextFreeDelivery\\Struct\\PluginConfigStruct::ARTICLE_DISPLAY_POSITION_ABOVE_PRICE')) %}
            {% sw_include 'storefront/free_delivery/index.html.twig' with {
                result: page.netiNextFreeDelivery
            } %}
        {% endif %}
    {% endblock %}

    {{ parent() }}
{% endblock %}

{% block page_product_detail_buy_form %}
    {% block page_product_detail_neti_free_delivery_info_above_buy_button %}
        {% if page.netiNextFreeDelivery and config('NetiNextFreeDelivery.config.articlePosition') is same as(constant('NetInventors\\NetiNextFreeDelivery\\Struct\\PluginConfigStruct::ARTICLE_DISPLAY_POSITION_BEFORE_CART_BUTTON')) %}
            {% sw_include 'storefront/free_delivery/index.html.twig' with {
                result: page.netiNextFreeDelivery
            } %}
        {% endif %}
    {% endblock %}

    {{ parent() }}

    {% block page_product_detail_neti_free_delivery_info_after_buy_button %}
        {% if page.netiNextFreeDelivery and config('NetiNextFreeDelivery.config.articlePosition') is same as(constant('NetInventors\\NetiNextFreeDelivery\\Struct\\PluginConfigStruct::ARTICLE_DISPLAY_POSITION_AFTER_CART_BUTTON')) %}
            {% sw_include 'storefront/free_delivery/index.html.twig' with {
                result: page.netiNextFreeDelivery
            } %}
        {% endif %}
    {% endblock %}
{% endblock %}

{% block page_product_detail_ordernumber_container %}
    {{ parent() }}

    {% block page_product_detail_neti_free_delivery_info %}
        {% if
            page.netiNextFreeDelivery
            and (config('NetiNextFreeDelivery.config.articlePosition') is same as(constant('NetInventors\\NetiNextFreeDelivery\\Struct\\PluginConfigStruct::ARTICLE_DISPLAY_POSITION_LAST_POSITION'))
            or config('NetiNextFreeDelivery.config.articlePosition') is null)
        %}
            {% sw_include 'storefront/free_delivery/index.html.twig' with {
                result: page.netiNextFreeDelivery
            } %}
        {% endif %}
    {% endblock %}
{% endblock %}
