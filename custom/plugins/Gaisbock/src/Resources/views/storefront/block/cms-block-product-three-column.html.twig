{% sw_extends '@Storefront/storefront/block/cms-block-product-three-column.html.twig' %}
{% block block_product_three_column %}
    {% set columns = 3 %}
    {% set productElementTypes = ['product-box', 'product-slider', 'buy-box'] %}

    {% block block_product_three_column_left %}
        {% set element = block.slots.getSlot('left') %}
        {% if element.type not in productElementTypes or element.data.products or element.data.product %}
            <div data-aos="fade-up" data-aos-delay="0" class="col-md-4 gaisbock-product-box aos-init" data-cms-element-id="{{ element.id }}">
                {% block block_product_three_column_left_inner %}
                    {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                {% endblock %}
            </div>
        {% endif %}
    {% endblock %}

    {% block block_product_three_column_center %}
        {% set element = block.slots.getSlot('center') %}
        {% if element.type not in productElementTypes or element.data.products or element.data.product %}
            <div data-aos="fade-up" data-aos-delay="200" class="col-md-4 gaisbock-product-box aos-init" data-cms-element-id="{{ element.id }}">
                {% block block_product_three_column_center_inner %}
                    {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                {% endblock %}
            </div>
        {% endif %}
    {% endblock %}

    {% block block_product_three_column_right %}
        {% set element = block.slots.getSlot('right') %}
        {% if element.type not in productElementTypes or element.data.products or element.data.product %}
            <div data-aos="fade-up" data-aos-delay="400" class="col-md-4 gaisbock-product-box aos-init" data-cms-element-id="{{ element.id }}">
                {% block block_product_three_column_right_inner %}
                    {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                {% endblock %}
            </div>
        {% endif %}
    {% endblock %}
{% endblock %}
