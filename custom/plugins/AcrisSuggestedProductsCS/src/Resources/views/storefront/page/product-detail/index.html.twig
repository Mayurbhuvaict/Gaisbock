{% sw_extends '@Storefront/storefront/page/product-detail/index.html.twig' %}

{% block page_product_detail_cross_selling %}
    {{ parent() }}
    <div class="acris-suggested-products">
    <div class="product-detail-tabs
                {% if config('AcrisSuggestedProductsCS.config').displayModeDesktop is same as ('among') %}
                    acris-product-cross-selling-tabs-desktop
                {% endif %}
                {% if config('AcrisSuggestedProductsCS.config').displayModeTablet is same as ('among') %}
                    acris-product-cross-selling-tabs-tablet
                {% endif %}
                {% if config('AcrisSuggestedProductsCS.config').displayModeMobile is same as ('tab') %}
                    acris-product-cross-selling-tabs-mobile
                {% else %}
                    product-detail-cross-selling
                {% endif %}
                acris-suggested-products-tab">
        {% sw_include '@Storefront/storefront/component/acris-suggested-products-tabs/acris-suggested-products-tabs.html.twig' %}
    </div>
    </div>
{% endblock %}

