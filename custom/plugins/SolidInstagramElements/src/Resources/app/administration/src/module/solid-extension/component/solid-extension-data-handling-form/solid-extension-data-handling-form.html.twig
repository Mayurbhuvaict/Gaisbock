    <sw-alert>
        <div v-html="$tc('sw-extension.component.solid-extension-data-handling-form.alert')"></div>
    </sw-alert>

    <sw-switch-field
        :label="$tc('sw-extension.component.solid-extension-data-handling-form.label')"
