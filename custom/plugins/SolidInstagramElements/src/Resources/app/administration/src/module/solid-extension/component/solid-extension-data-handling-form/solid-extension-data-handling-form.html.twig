        :disabled="fetchAndStoreLatestPostsDisabled"
        block
        @click="onClickFetchAndStoreLatestPosts"
    >
        {{ $t('sw-extension.component.solid-extension-data-handling-form.fetchAndStoreLatestPosts') }}
