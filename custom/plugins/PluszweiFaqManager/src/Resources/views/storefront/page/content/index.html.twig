{% sw_extends '@Storefront/storefront/page/content/index.html.twig' %}

{% block cms_content %}
    {% set currentCategory = page.header.navigation.active %}
    {% if currentCategory.type == 'faq' %}
        {% sw_include '@PluszweiFaqManager/storefront/page/faq/index.html.twig' with {
            featuredArticles: page.extensions.faqFeaturedArticles,
            categories: page.extensions.faqCategories} %}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}